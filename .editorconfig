root = true

# Global rules
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 180
trim_trailing_whitespace = true

# Markdown global rules
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# YAML/YML global rules
[*.{yaml,yml}]
indent_size = 2
max_line_length = off
